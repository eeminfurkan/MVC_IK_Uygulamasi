@model MVC_IK_Uygulamasi.Models.Izin
@{
    ViewData["Title"] = "Yeni İzin Talebi";
}

<h1>Yeni İzin Talebi</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            @* Personel Seçme Dropdown'ı ARTIK YOK. Tamamen siliyoruz. *@
            @* <div class="form-group mb-3"> ... bu div'i silin ... </div> *@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="IzinTuru" class="control-label"></label>
                <input asp-for="IzinTuru" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="BaslangicTarihi" class="control-label"></label>
                <input asp-for="BaslangicTarihi" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="BitisTarihi" class="control-label"></label>
                <input asp-for="BitisTarihi" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Talep Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>