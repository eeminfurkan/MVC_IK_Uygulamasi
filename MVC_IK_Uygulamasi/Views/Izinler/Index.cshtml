@model IEnumerable<MVC_IK_Uygulamasi.Models.Izin>

@{
    ViewData["Title"] = "İzin Talepleri";
}

<h1>İzin Talepleri</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Talep Oluştur</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Personel</th>
            <th>İzin Türü</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Onay Durumu</th>
            @if (User.IsInRole("Admin"))
            {
            <th style="width: 250px;">Durumu Değiştir</th>
            }

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Personel.Ad) @Html.DisplayFor(modelItem => item.Personel.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IzinTuru)
                </td>
                <td>
                    @item.BaslangicTarihi.ToShortDateString()
                </td>
                <td>
                    @item.BitisTarihi.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnayDurumu)
                </td>
    @if (User.IsInRole("Admin"))
    {
                <td>
                    <form asp-action="DurumGuncelle" method="post">
                        <div class="input-group">
                            <input type="hidden" name="id" value="@item.Id" />
                            <select name="durum" class="form-select">
                                <option value="Beklemede" selected="@(item.OnayDurumu == "Beklemede")">Beklemede</option>
                                <option value="Onaylandı" selected="@(item.OnayDurumu == "Onaylandı")">Onaylandı</option>
                                <option value="Reddedildi" selected="@(item.OnayDurumu == "Reddedildi")">Reddedildi</option>
                            </select>
                            <button type="submit" class="btn btn-info btn-sm">Güncelle</button>
                        </div>
                    </form>
                </td>
    }

            </tr>
        }
    </tbody>
</table>