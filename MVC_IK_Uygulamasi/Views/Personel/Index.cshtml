@model List<MVC_IK_Uygulamasi.Models.Personel>

@{
    ViewData["Title"] = "Personel Listesi";
}

<h1>Personel Listesi</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Personel Ekle</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sicil No</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Departman</th>
            <th>Pozisyon</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.SicilNo</td>
                <td>@personel.Ad</td>
                <td>@personel.Soyad</td>
                <td>@personel.Departman</td>
                <td>@personel.Pozisyon</td>
                <td>
                    <a asp-action="Details" asp-route-id="@personel.Id" class="btn btn-info btn-sm">Detay</a> |
                    <a asp-action="Edit" asp-route-id="@personel.Id" class="btn btn-warning btn-sm">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@personel.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>