@model MVC_IK_Uygulamasi.Models.Personel

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<h1>Yeni Personel Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Ad'dan önce TCKimlikNo *@
            <div class="form-group mb-3">
                <label asp-for="SicilNo" class="control-label"></label>
                <input asp-for="SicilNo" class="form-control" />
                <span asp-validation-for="SicilNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TCKimlikNo" class="control-label"></label>
                <input asp-for="TCKimlikNo" class="form-control" />
                <span asp-validation-for="TCKimlikNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Departman" class="control-label"></label>
                <input asp-for="Departman" class="form-control" />
                <span asp-validation-for="Departman" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Pozisyon" class="control-label"></label>
                <input asp-for="Pozisyon" class="form-control" />
                <span asp-validation-for="Pozisyon" class="text-danger"></span>
            </div>
            @* Pozisyon'dan sonra Maas ve TelefonNumarasi *@
            <div class="form-group mb-3">
                <label asp-for="Maas" class="control-label"></label>
                <input asp-for="Maas" class="form-control" />
                <span asp-validation-for="Maas" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TelefonNumarasi" class="control-label"></label>
                <input asp-for="TelefonNumarasi" class="form-control" />
                <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Eposta" class="control-label"></label>
                <input asp-for="Eposta" class="form-control" />
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IseGirisTarihi" class="control-label"></label>
                <input asp-for="IseGirisTarihi" class="form-control" />
                <span asp-validation-for="IseGirisTarihi" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>