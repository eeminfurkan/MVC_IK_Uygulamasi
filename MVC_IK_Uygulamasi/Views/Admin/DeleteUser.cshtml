@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Kullanıcıyı Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Kullanıcı: @Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kullanıcı Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="DeleteUser">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>