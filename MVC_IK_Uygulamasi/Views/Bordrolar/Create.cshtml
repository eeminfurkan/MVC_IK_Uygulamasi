@model List<MVC_IK_Uygulamasi.Models.Personel>

@{
    ViewData["Title"] = "Aylık Bordro Oluştur";
}

<h1>Aylık Bordro Oluştur</h1>
<hr />

<form asp-action="Create" method="post">

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="donem" class="form-label">Bordro Dönemi (Ay/Yıl)</label>
            <input type="month" id="donem" name="donem" class="form-control" required />
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Sicil No</th>
                <th>Ad Soyad</th>
                <th>Brüt Maaş (₺)</th>
                <th>Ek Ödemeler (₺)</th>
                <th>Toplam Kesintiler (₺)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].SicilNo
                        <input type="hidden" name="bordrolar[@i].PersonelId" value="@Model[i].Id" />
                        <input type="hidden" name="bordrolar[@i].BrutMaas" value="@Model[i].BrutMaas" />
                    </td>
                    <td>@Model[i].Ad @Model[i].Soyad</td>
                    <td>@Model[i].BrutMaas.ToString("N2")</td>
                    <td>
                        <input type="number" step="0.01" name="bordrolar[@i].EkOdemeler" class="form-control" value="0" />
                    </td>
                    <td>
                        <input type="number" step="0.01" name="bordrolar[@i].ToplamKesintiler" class="form-control" value="0" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group mt-4">
        <input type="submit" value="Tüm Bordroları Kaydet" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>

</form>